<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" options="{'no_create': True}" widget="many2many_tags" attrs="{'column_invisible': True}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="options">{'no_create': False}</attribute>
            </xpath>
        </field>
    </record>
    <!-- Archive view to hide optional products and templates -->
    <record id="sale_management.sale_order_form_quote" model="ir.ui.view">
        <field name="active" eval="0"/>
    </record>

    <record id="view_sale_order_inherit_auto_done_iho" model="ir.ui.view">
        <field name="name">sale.order.inherit.auto.done.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_auto_done_setting"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_unlock']" position="attributes">
                <attribute name="groups">sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads"</attribute>
            </xpath>
        </field>
    </record>
</odoo>
