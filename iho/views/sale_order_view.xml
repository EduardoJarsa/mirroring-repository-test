<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_order_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field
                    name="analytic_tag_ids"
                    groups="analytic.group_analytic_tags"
                    options="{'no_create': True}"
                    widget="many2many_tags"
                />
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="options">{'no_create': False}</attribute>
            </xpath>
            <xpath expr="//group[@name='sale_reporting']" position="attributes">
                <attribute name="groups" />
            </xpath>
            <xpath expr="//field[@name='opportunity_id']" position="attributes">
                <attribute name="groups" />
            </xpath>
        </field>
    </record>
    <!-- Archive view to hide optional products and templates -->
    <record id="sale_management.sale_order_form_quote" model="ir.ui.view">
        <field name="active" eval="0" />
    </record>
</odoo>
