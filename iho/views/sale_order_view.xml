<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Designer">
                    <group>
                        <field name="designer_ids"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="route_id" groups="sale_stock.group_route_so_lines" options="{'no_create': True}"/>
                <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" options="{'no_create': True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
