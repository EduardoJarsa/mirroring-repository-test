<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_analytic_account_form" model="ir.ui.view">
        <field name="name">view.purchase.order.analytic.account.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="analytic_account_id" groups="analytic.group_analytic_tags"
                    options="{'no_create': True}"
                    domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                <field name="analytic_tag_ids" widget="many2many_tags"
                    groups="analytic.group_analytic_tags" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
