<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_analytics_form" model="ir.ui.view">
        <field name="name">view.purchase.analytics.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="account_analytic_id" groups="analytic.group_analytic_accounting" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags" options="{'color_field': 'color'}" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>
