<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_sale_authorization" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sale.authorization</field>
        <field name="model">sale.order</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="before">
                <field name="kanban_state" widget="state_selection"/>
            </xpath>
            <xpath expr="//header/button[@name='action_quotation_send']" position="replace">
                <button name="action_quotation_send" string="Send by Email" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('kanban_state', '!=', 'done')]}" class="btn-primary"/>
            </xpath>
            <xpath expr="//header/button[@id='action_confirm']" position="replace">  
            </xpath>
            <xpath expr="//header/button[@name='action_confirm']" position="replace">
                <button name="action_confirm" string="Confirm Sale"  class="btn-primary" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent']), ('kanban_state', '!=', 'done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
