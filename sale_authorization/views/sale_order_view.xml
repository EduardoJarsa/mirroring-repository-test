<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_sale_authorization" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sale.authorization</field>
        <field name="model">sale.order</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="authorized" invisible="1"/>
                <field name="authorized_version" invisible="1"/>
                <field name="origin_sale_order_id"/>
                <field name="active_version_id"/>
            </xpath>
            <xpath expr="//header/button[@name='action_quotation_send']" position="replace">
                <button name="action_quotation_send" string="Send by Email" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('authorized', '=', False)]}" class="btn-primary"/>
            </xpath>
<!--             <xpath expr="//header/button[@id='action_confirm']" position="replace">  
            </xpath> -->
            <xpath expr="//header/button[@name='action_confirm']" position="replace">
                <button name="action_confirm" string="Confirm Sale"  class="btn-primary" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent']), ('authorized', '=', False)]}"/>
                <button name="authorize_sale_order" class="btn-primary" attrs="{'invisible': ['|', '|', ('order_version_ids', '=', []), ('authorized_version', '=', False), ('active_version_modified', '=', True)]}" string="Authorized by customer" groups="sale_authorization.group_sale_authorize" type="object"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="active_version_id" invisible="1"/>
                <field name="active_version_modified" attrs="{'invisible': ['|', ('active_version_id', '=', False), ('authorized', '=', True)]}"/>
            </xpath>
        </field>
    </record>
    <record id="view_sale_order_inherit_form_sale_review" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sale.review</field>
        <field name="model">sale.order</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale_review.view_sale_order_inherit_form_sale_review"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='review_sale_order']" position="attributes">
                <attribute name="attrs">{'invisible': [('authorized', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_sale_order_inherit_form_sale_order_version" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sale.order_version</field>
        <field name="model">sale.order</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale_order_version.view_sale_order_version_inherit_form_iho"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='restore_version']" position="attributes">
                <attribute name="attrs">{'invisible': [('state','not in',('draft', 'sent')), ('authorized', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@id='approve_version']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('has_lines', '!=', True), ('state','not in',('draft', 'sent')), ('authorized', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
    <!--add new action to quotations in sales module-->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="domain">[('state', '!=', 'sale'),('authorized', '=', False)]</field>
    </record>
    <!--override original domain in this action-->
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="domain">[('state', '=', 'sale')]</field>
    </record>

    <!--new action filter quotations than are authorized-->
        <record id="action_sale_autorization" model="ir.actions.act_window">
            <field name="name">Quotation Authorization</field>
            <field name="domain">[('state', '!=', 'sale'),('authorized', '=', True)]</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--new menu-->
        <menuitem id="menu_sales_orders_quotation_authorized" name="Quotation Authorized" parent="sale.sale_order_menu" action="action_sale_autorization" sequence="1"/>
        
        <record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="domain">[('state', '!=', 'sale'),('authorized', '=', False)]</field>
        </record>

        <!--added new menus in the crm module that filter the same way as the sales module-->

        <menuitem id="crm_menu_sales_authorized" name="Quotation Authorized" parent="crm.crm_menu_sales" action="action_sale_autorization" sequence="2"/>

        <menuitem id="crm_menu_sales_orders" name="Sale Order" parent="crm.crm_menu_sales" action="sale.action_orders" sequence="3"/>

        <record id="sale_crm.sale_order_menu_quotations_crm" model="ir.ui.menu">
            <field name="name">Quotation</field>
        </record>

    <!--Modified the original action for this new filter-->
    <record id="sale_crm.sale_action_quotations" model="ir.actions.act_window">
        <field name="domain">[('opportunity_id', '=', active_id),('authorized', '=', False)]</field>
        <field name="context">{'search_default_opportunity_id': [active_id], 'default_opportunity_id': active_id}</field>
    </record>

    <!--This new action is for new button Quotation Autorizad that there is in crm inside of pipeline form-->
    <record id="sale_action_quotations_authorized" model="ir.actions.act_window">
        <field name="name">Quotation Authorized pipeline</field>
        <field name="domain">[('opportunity_id', '=', active_id),('state', '!=', 'sale'),('authorized', '=', True)]</field>
        <field name="context">{'search_default_opportunity_id': [active_id], 'default_opportunity_id': active_id}</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
