<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_inherit_form_sale_authorization" model="ir.ui.view">
        <field name="name">crm.lead.inherit.form.sale.authorization</field>
        <field name="model">crm.lead</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(sale_crm.sale_action_quotations)d']" position="after">
                <button class="oe_stat_button" type="action" name="sale_authorization.sale_action_quotations_authorized" icon="fa-pencil-square-o" context="{'default_partner_id': partner_id}">
                    <div class="o_stat_info">
                        <field name="sale_authorized" class="o_stat_value"/>
                        <span class="o_stat_text"> Quotations Authorized </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
