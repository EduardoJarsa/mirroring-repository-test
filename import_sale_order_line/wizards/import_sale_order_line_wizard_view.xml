<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="xls_import_sale_order_iho_view" model="ir.ui.view">
        <field name="name">Import Sale Order Line IHO</field>
        <field name="model">import.sale.order.line.iho</field>
        <field name="arch" type="xml">
            <form string="Import Sale Order IHO">
                <separator colspan="4" string="Please upload the CSV file"/>
                    <group>
                        <field name='file_name' invisible='1'/>
                        <field widget="binary" height="64" name="upload_file" filename="file_name"/>
                    </group>
                    <footer>
                        <button name="import_sale_order_line_iho" class="oe_highlight" string="Confirm" type="object"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
            </form>
        </field>
    </record>

    <record id="import_sale_order_line_iho_action" model="ir.actions.act_window">
        <field name="name">Import Sale Order Line IHO</field>
        <field name="res_model">import.sale.order.line.iho</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
