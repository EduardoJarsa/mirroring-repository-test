    <record id="crm_team_definition_menu_action" model="ir.actions.act_window">
    <field name="name">CRM Teams</field>
    <field name="model">crm.lead</field>
    <field name="arch" type="xml">
       <group><field name="total_percentage"/></group>
          <field name="employee_ids">
              <form string="Form Name">
                <field name="name" readonly="1"/>
                <field name="team_member" visible="true"/>
                <field name="percentage" visible="true"/>
              </form>
