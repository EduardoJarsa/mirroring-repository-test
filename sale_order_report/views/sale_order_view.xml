<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_report" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sif.interface</field>
        <field name="model">sale.order</field>
        <field name="priority">101</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                <field name="image_sol" attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/label[1]" position="before">
                <group attrs="{'invisible': [('display_type', '!=', 'line_section')]}">
                    <group>
                        <field name="image_sol"  widget="image"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
