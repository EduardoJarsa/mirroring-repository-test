<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_iho_discounts_form_view" model="ir.ui.view">
        <field name="name">product.template.iho.discounts.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <separator string="Discounts"/>
                <field name="maker_id" class="oe_inline" groups="supplier_product_discounts.group_manage_global_discount" domain="[('ref','!=', False), ('is_company','=',True)]" attrs="{'required': [('type', '=', 'product')]}"/>
                <field name="catalog_id" class="oe_inline" groups="supplier_product_discounts.group_manage_global_discount"/>
                <field name="family_id" class="oe_inline" groups="supplier_product_discounts.group_manage_global_discount"/>
            </xpath>
        </field>
    </record>
</odoo>
