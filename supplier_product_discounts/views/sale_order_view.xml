<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_discount_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.discounts.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="Discounts" string="Discounts">
                    <group>
                        <field name="discounts_ids" widget="section_and_note_one2many" editable="true" nolabel="1">
                            <tree>
                                <field name="sale_id" invisible="1"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="catalog_id"/>
                                <field name="family_id"/>
                                <field name="discount"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after" >
                <field name="vendor_id" attrs="{'column_invisible': [('parent.state', '!=', 'sale')], 'required': [('parent.state', '!=', 'sale')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/label[1]" position="before">
                <group attrs="{'invisible': ['|', ('is_bom_line', '!=', False), ('display_type', '!=', False)]}">
                    <group>
                        <field name="vendor_id" attrs="{'column_invisible': [('parent.state', '!=', 'sale')], 'required': [('parent.state', '!=', 'sale')]}"/>
                    </group>
                </group>
            </xpath>
        </field> 
    </record>
</odoo>
