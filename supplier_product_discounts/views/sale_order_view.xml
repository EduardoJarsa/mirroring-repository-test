<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_discount_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.discounts.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="Discounts" string="Discounts" groups="supplier_product_discounts.group_create_special_discounts">
                    <group>
                        <field name="discounts_ids" widget="section_and_note_one2many" editable="true" nolabel="1">
                            <tree>
                                <field name="sale_id" invisible="1"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="catalog_id"/>
                                <field name="line_id"/>
                                <field name="discount"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field> 
    </record>
</odoo>
