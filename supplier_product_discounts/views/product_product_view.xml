<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_product_iho_discounts_form_view" model="ir.ui.view">
        <field name="name">product.product.iho.discounts.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <separator string="Discounts"/>
                <field name="maker_id" class="oe_inline" groups="supplier_product_discounts.group_create_discounts" domain="[('supplier','=',True), ('ref','!=', False), ('is_company','=',True)]"/>
                <field name="catalog_id" class="oe_inline" groups="supplier_product_discounts.group_create_discounts"/>
                <field name="family_id" class="oe_inline" groups="supplier_product_discounts.group_create_discounts"/>
            </xpath>
        </field>
    </record>
</odoo>
