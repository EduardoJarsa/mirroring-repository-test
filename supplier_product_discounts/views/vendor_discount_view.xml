<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vendor_product_discounts_form_iho" model="ir.ui.view">
        <field name="name">vendor.product.discounts.form.iho</field>
        <field name="model">vendor.product.discounts</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('supplier','=',True), ('ref','!=', False), ('is_company','=',True)]"/>
                            <field name="catalog_id"/>
                            <field name="line_id"/>
                            <field name="discount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_vvendor_sale_order_discounts_form_iho" model="ir.ui.view">
        <field name="name">vendor.sale.order.discounts.form.iho</field>
        <field name="model">vendor.sale.order.discounts</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="catalog_id"/>
                            <field name="line_id"/>
                            <field name="discount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_vendor_product_discounts_tree_iho" model="ir.ui.view">
        <field name="model">vendor.product.discounts</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree string="Customs">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="catalog_id"/>
                <field name="line_id"/>
                <field name="discount"/>
            </tree>
       </field>
    </record>
    <record id="template_vendor_discount" model="ir.actions.act_window">
        <field name="name">Vendor discounts</field>
        <field name="res_model">vendor.product.discounts</field>
        <field name="view_type">form</field>
    </record>
    <menuitem id="menu_vendor_products_discount" name="Discounts"  parent="sale.sales_team_config" action="template_vendor_discount" groups="supplier_product_discounts.group_create_discounts"/>
</odoo>
