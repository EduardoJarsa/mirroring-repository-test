<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_ods_service_order_iho">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="container" style="background-color:white;">
                        <table width="100%">
                            <tbody>
                                <tr>
                                    <td width="50%" style="background-color:white;">
                                        <strong><span t-field="o.partner_id" style="color:black" /></strong>
                                        <span
                                            style="color:black;font-size:18px;"
                                            t-field="o.service_order_address_id.name"
                                        />
                                        <div
                                            t-field="o.service_order_address_id"
                                            t-options='{"widget": "contact", "fields": ["address",], "no_marker": True, "phone_icons": True}'
                                        />
                                        <br />
                                        <span
                                            style="color:black;font-size:18px;"
                                            t-field="o.service_order_contact_id.name"
                                        />
                                        <div
                                            t-field="o.service_order_contact_id"
                                            t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": False, "phone_icons": True}'
                                        />
                                        <br />
                                    </td>
                                    <td width="50%" style="background-color:white;">
                                        <strong style="color:black;font-size:18px;">ODS Folio: </strong>
                                        <strong><span t-field="o.service_order_number" /></strong><br />
                                        <span t-field="o.service_center_id.name" style="color:black" /><br />
                                        <strong style="color:black;font-size:18px;">Client: </strong>
                                        <span t-field="o.partner_id" />
                                        <div t-if="o.sale_order_id">
                                            <strong style="color:black;font-size:18px;">Sales Order:    .</strong>
                                            <span t-field="o.sale_order_id" /><br />
                                            <span t-field="o.sale_order_opportunity_id" /><br />
                                        </div>
                                        <t t-if="o.requested_execution_date_time">
                                            <br>Requested Date Time: </br>
                                            <span
                                                t-esc="context_timestamp(o.requested_execution_date_time).strftime('%d-%b-%y %H:%M')"
                                            />
                                        </t>
                                        <br>Requestor: </br>
                                        <span t-field="o.create_uid" /><br />
                                        <strong
                                            style="color:black;font-size:18px;"
                                            t-if="o.to_invoice &gt; 0"
                                        >Service WITH cost</strong>
                                        <br t-if="o.to_invoice == 0">Service WITHOUT cost authorized by: </br><br /><br
                                        />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <strong style="color:black;font-size:18px;">Service type: </strong>
                                        <span t-field="o.ptc_service_type" />
                                        <br />
                                        <strong style="color:black;font-size:18px;">Additionals: </strong>
                                        <span t-field="o.ptc_additionals" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="background-color:white;">
                                        <br />
                                        <strong style="color:black;font-size:18px">Service Description</strong><br />
                                        <span t-field="o.description" style="font-size:12px" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b style="color:black;font-size:18px;">Service Team</b>
                                        <br>Transport</br>
                                        <br>Handling</br>
                                        <br>Installation</br>
                                        <br>Supervisor</br>
                                        <br />
                                        <br>Notes:</br>
                                    </td>
                                    <td align="right">
                                        <br />
                                        <br />
                                        <br>_____________________________________________</br>
                                        <br>Material received complete and in good shape</br>
                                        <br>Electronic parts have not warranty</br>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
