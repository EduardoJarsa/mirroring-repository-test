<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_class_tree_iho" model="ir.ui.view">
        <field name="name">view.project.task.class.tree.iho</field>
        <field name="model">project.task.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
            </tree>
        </field>
    </record>

    <record id="view_project_task_class_form_iho" model="ir.ui.view">
        <field name="name">view.project.task.class.form.iho</field>
        <field name="model">project.task.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                        <field name="display_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_task_class" model="ir.actions.act_window">
        <field name="name">Project Task Classifications</field>
        <field name="res_model">project.task.class</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="project_task_class_menu" name="Project Task Classifications" parent="project.menu_project_config" action="action_project_task_class"/>
</odoo>
