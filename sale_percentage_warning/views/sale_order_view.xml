<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_sale_percentage" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sale.percentage</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="alert alert-info" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('max_percentage','=',False)]}">
                    <blod>Warning!</blod>, The percentage of one line exceeds the max percentage allowed, verify your information. 
                </div>

                <field name="max_percentage" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
