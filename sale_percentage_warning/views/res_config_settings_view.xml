<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_iho" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.iho</field>
        <field name="model">res.config.settings</field>
        <field eval="40" name="priority"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[2]/div[2]/div[3]" position="before">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('group_discount_per_so_line','=',False)]}">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="max_percentage"/>
                        <field name="max_percentage"/>
                        <div class="text-muted">Set of the percentage limit the sale order discount.</div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
