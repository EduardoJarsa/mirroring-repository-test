<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_version_create_wizard" model="ir.ui.view">
        <field name="name">Sale Order Version Create Wizard</field>
        <field name="model">sale.order.version.create.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_id" invisible="1" />
                        <field name="boolean_switch" invisible="1" />
                        <field name="use_prefix" invisible="1" />
                        <field name="flag_first_time" invisible="1" />
                        <field name="prefix_selection" attrs="{'invisible': [('use_prefix','=',False)]}" />
                        <field
                            name="prefix_char"
                            placeholder="If you do not write any prefix, one is assigned by default"
                            attrs="{'invisible': [
                            ('use_prefix','=', False),
                        ],}"
                        />
                        <field name="name" attrs="{'required':[('use_prefix','=',False)]}" />
                        <field name="boolean_switch" invisible="1" />
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="create_version" string="Create Versions" type="object" />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_sale_order_version_create_wizard" model="ir.actions.act_window">
        <field name="name">Sale Order Version</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.version.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
