<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_version_wizard" model="ir.ui.view">
        <field name="name">Sale Order Version Wizard</field>
        <field name="model">sale.order.version.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_id" invisible="1"/>
                        <field name="sale_version_id" domain="[('sale_id', '=', sale_id), ('state', '!=', 'confirmed')]" options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="back_previous_version" string="Back to previous version" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_sale_order_version_wizard" model="ir.actions.act_window">
        <field name="name">Sale Order Version</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.version.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
