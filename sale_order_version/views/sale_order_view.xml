<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_version_inherit_form_iho" model="ir.ui.view">
        <field name="name">sale.order.version.inherit.form.iho</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <span> - </span>
                <field name="active_version_name"/>
                <field name="has_lines" invisible="1"/>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="before">
                <button name="%(sale_order_version.action_sale_order_version_wizard)d" type="action" string="Restore Version" class="btn-primary" attrs="{'invisible': [('state','not in',('draft', 'sent'))]}" groups="sale_order_version.group_create_quotations"/>
                <button name="%(sale_order_version.action_sale_order_version_create_wizard)d" type="action" string="Create Version" class="btn-primary" attrs="{'invisible': ['|',('has_lines', '!=', True), ('state','not in',('draft', 'sent'))]}" groups="sale_order_version.group_create_quotations"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="versions" string="Versions" attrs="{'invisible': [('order_version_ids', '=', [])]}">
                    <group>
                        <field name="order_version_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="currency_agreed_rate"/>
                                <field name="date_order"/>
                                <field name="client_order_ref"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field> 
    </record>
</odoo>
