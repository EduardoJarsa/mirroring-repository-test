<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_version_form_iho" model="ir.ui.view">
        <field name="name">sale.order.version.form.iho</field>
        <field name="model">sale.order.version</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="sale_id" readonly="1" string="Sale Order"/>
                            <field name="prefix" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="partner_invoice_id" readonly="1"/>
                            <field name="partner_shipping_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="validity_date" readonly="1"/>
                            <field name="payment_term_id" readonly="1"/>
                            <field name="currency_agreed_rate" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids" widget="section_and_note_one2many" readonly="1" nolabel="1">
                                <tree>
                                    <field name="display_type" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="iho_price_list"/>
                                    <field name="iho_discount"/>
                                    <field name="iho_sell_1"/>
                                    <field name="iho_factor"/>
                                    <field name="iho_sell_2"/>
                                    <field name="iho_sell_3"/>
                                    <field name="product_uom_qty"/>
                                    <field name="qty_delivered"/>
                                    <field name="qty_invoiced"/>
                                    <field name="analytic_tag_ids" groups="analytic.group_analytic_tags"/>
                                    <field name="route_id"/>
                                    <field name="price_unit"/>
                                    <field name="iho_purchase_cost"/>
                                    <field name="partner_id"/>
                                    <field name="iho_currency_id"/>
                                    <field name="tax_id"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Information">
                            <field name="state" invisible="1"/>
                            <group>
                                <group string="Shipping Information" name="sale_shipping" groups="sale.group_sale_order_dates">
                                    <field name="expected_date" groups="sale.group_sale_order_dates"/>
                                    <field name="commitment_date" groups="sale.group_sale_order_dates"/>
                                </group>
                                <group string="Sales Information" name="sales_person">
                                    <field name="user_id" readonly="1"/>
                                    <field name="team_id" readonly="1" options="{'no_create': True}"/>
                                    <field name="client_order_ref" readonly="1"/>
                                    <field name="reference" readonly="1" attrs="{'invisible': [('reference', '=', False)]}"/>
                                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                    <field name="analytic_account_id" attrs="{'readonly': [('state','=','sale')]}" groups="analytic.group_analytic_accounting" force_save="1" readonly="1"/>
                                </group>
                                <group name="sale_pay" string="Invoicing">
                                    <field name="date_order" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}" readonly="1"/>
                                    <field name="fiscal_position_id" options="{'no_create': True}" readonly="1"/>
                                    <field name="invoice_status" states="sale,done" invisible="1"/>
                                </group>
                                <group string="Reporting" name="technical" groups="base.group_no_one">
                                    <field groups="base.group_no_one" name="origin" readonly="1"/>
                                </group>
                                <group name="utm_link" groups="base.group_no_one"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_sale_order_version_line_form_iho" model="ir.ui.view">
        <field name="name">sale.order.version.line.form.iho</field>
        <field name="model">sale.order.version.line</field>
        <field name="arch" type="xml">
            <form>
                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                    <group>
                        <field name="display_type" invisible="1"/>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="price_unit"/>
                        <field name="tax_id"/>
                    </group>
                    <group>
                        <field name="iho_price_list"/>
                        <field name="iho_discount"/>
                        <field name="iho_sell_1"/>
                    </group>
                </group>
                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                    <group>
                        <field name="iho_factor"/>
                        <field name="iho_sell_2"/>
                        <field name="iho_sell_3"/>
                    </group>
                    <group>
                        <field name="qty_delivered"/>
                        <field name="qty_invoiced"/>
                        <field name="route_id"/>
                        <field name="price_subtotal"/>
                    </group>
                </group>
                <group attrs="{'invisible': [('display_type', '!=', 'line_section')]}">
                    <field name="name"/>
                    <field name="image_sol" widget="image"/>
                </group>
                <group>
                    <field name="analytic_tag_ids" groups="analytic.group_analytic_tags"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
