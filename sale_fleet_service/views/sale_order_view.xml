<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_fleet_service" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.fleet.service</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="alert alert-info" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('low_fleet_flag','=',False)]}">
                    Value for Fleet and Service is the minimum allowed amount.
                </div>
                <field name="low_fleet_flag" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
