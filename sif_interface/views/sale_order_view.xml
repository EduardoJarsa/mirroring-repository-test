<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit_form_sif_interface" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.sif.interface</field>
        <field name="model">sale.order</field>
        <field name="priority">101</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_unlock']" position="before">
                <button class="btn-primary" name="%(action_import_2020_wizard)d" attrs="{'invisible': [('state', '!=', 'sale')]}" string="Import From 2020" type="action"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="currency_agreed_rate"/>
                <field name="is_bom" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                <field name="iho_price_list" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <field name="iho_discount" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <field name="iho_sell_1" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <field name="iho_factor" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <field name="iho_sell_2" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                <field name="iho_sell_3" attrs="{'invisible': [('display_type', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after" >
                <field name="is_bom_line" invisible="1"/>
                <field name="iho_purchase_cost" attrs="{'invisible': ['|', ('is_bom_line', '!=', False), ('display_type', '!=', False)], 'column_invisible': [('parent.is_bom', '!=', False)]}"/>
                <field name="vendor_id" attrs="{'invisible': ['|', ('is_bom_line', '!=', False), ('display_type', '!=', False)], 'column_invisible': [('parent.is_bom', '!=', False)]}"/>
                <field name="iho_currency_id" attrs="{'invisible': ['|', ('is_bom_line', '!=', False), ('display_type', '!=', False)], 'column_invisible': [('parent.is_bom', '!=', False)  ]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/label[1]" position="before">
                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                    <group>
                        <field name="iho_price_list"/>
                        <field name="iho_discount"/>
                        <field name="iho_sell_1"/>
                    </group>
                    <group>
                        <field name="iho_factor"/>
                        <field name="iho_sell_2"/>
                        <field name="iho_sell_3"/>
                    </group>
                </group>
                <group attrs="{'invisible': ['|', ('is_bom_line', '!=', False), ('display_type', '!=', False)]}">
                    <group>
                        <field name="is_bom_line" invisible="1"/>
                        <field name="iho_purchase_cost"/>
                        <field name="vendor_id"/>
                        <field name="iho_currency_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
