<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <record id="sale_res_config_settings_iho_view_form" model="ir.ui.view">
        <field name="name">sale.res_config_settings_iho_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='confirmation_email_setting']" position="after">
                <div class="o_setting_left_pane">
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="order_service_total_minimum_usd"/>
                        <div class="text-muted">
                            Minimum USD Service total to include in an Order
                        </div>
                        <div class="content-group" attrs="{'invisible': [('order_service_total_minimum_usd','=',False)]}">
                            <div class="mt16">
                                <span class="col-lg-3">Minimum Value: <field name="order_service_total_minimum_usd" attrs="{'required': [('order_service_total_minimum_usd', '=', True)]}"/> USD</span>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
