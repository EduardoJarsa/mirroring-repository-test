<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_sale_order_wizard_form" model="ir.ui.view">
        <field name="name">view.import.sale.order.wizard.form</field>
        <field name="model">import.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h2><strong>Please upload the file to import</strong></h2>
                        <big><i class="fa fa-file-code-o fa-2x text-primary" aria-label="Code" title="Code"></i><label for="upload_file"/><field name="upload_file" filename="file_name" nolabel="1"/></big>
                        <field name="file_name" invisible="1" class="oe_inline oe_right"/>
                        <field name="category_id" class="oe_inline oe_right"/>
                        <field name="taxes_id" class="oe_inline oe_right"/>
                    </group>
                    <footer>
                        <button name="run_import" string='Confirm' type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
           </form>
        </field>
    </record>
    <record id="action_import_sale_order_wizard" model="ir.actions.act_window">
        <field name="name">Import From File</field>
        <field name="res_model">import.sale.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
</odoo>
