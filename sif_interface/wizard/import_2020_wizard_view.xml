<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_2020_wizard_form" model="ir.ui.view">
        <field name="name">view.import.2020.wizard.form</field>
        <field name="model">import.2020.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h2><strong>Please Upload the XML file</strong></h2>
                        <big><i class="fa fa-file-code-o fa-2x text-primary" aria-label="Code" title="Code"></i><label for="file_xml"/><field name="file_xml" filename="xml_name" nolabel="1"/></big>
                        <field name="xml_name" invisible="1" class="oe_inline oe_right"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <footer>
                        <button name="run_product_creation" string='Confirm' type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
           </form>
        </field>
    </record>
    <record id="action_import_2020_wizard" model="ir.actions.act_window">
        <field name="name">Import From 2020</field>
        <field name="res_model">import.2020.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
    <menuitem id="create_product_wizard_menu" name="Import From 2020" action="action_import_2020_wizard" parent="sale.product_menu_catalog" sequence="10"/>
</odoo>
