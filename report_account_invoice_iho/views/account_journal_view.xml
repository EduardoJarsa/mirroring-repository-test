<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report
        id="action_report_account_invoice_iho"
        model="account.move"
        string="Report Account Invoice IHO"
        report_type="qweb-pdf"
        name="report_account_invoice_iho.report_account_invoice_document"
        file="report_account_invoice_iho.report_account_invoice_document"
    />
    <record id="newpaper" model="report.paperformat">
        <field name="name">Invoice iho</field>
        <field name="default" eval="True" />
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">2</field>
        <field name="dpi">120</field>
    </record>
    <record id="action_report_account_invoice_iho" model="ir.actions.report">
        <field name="paperformat_id" ref="report_account_invoice_iho.newpaper" />
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
    </record>
    <record model="ir.ui.view" id="account_journal_report_account_invoice_iho_form">
        <field name="name">account_journal_report_account_invoice_iho.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_control_ids']" position="after">
                <field name="display_on_footer" attrs="{'invisible': [('type', '!=', 'bank')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
