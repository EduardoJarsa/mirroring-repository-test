<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_team_inherit_form_iho" model="ir.ui.view">
        <field name="name">crm.team.inherit.form.iho</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="sequence_id" groups="sales_team.group_sale_manager" required="1"/>
                <field name="confirmed_sequence_id" groups="sales_team.group_sale_manager" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>
