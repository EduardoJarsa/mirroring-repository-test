<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_block_ui_inherit_crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.block.ui.inherit.crm.case.form.view.oppor</field>
        <field name="model">crm.lead</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="block_ui_crm" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('partner_address_email', '!=', False), ('email_from', '=', False)], 
                    'readonly': [('block_ui_crm', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('partner_address_phone', '!=', False), ('phone', '=', False)], 
                    'readonly': [('block_ui_crm', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_address_phone']" position="attributes">
                <attribute name="attrs">{'invisible': [('partner_address_phone', '=', False)], 
                    'readonly': [('block_ui_crm', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//page[1]" position="attributes">  
                <attribute name="groups">iho_simplification.group_show_blocked_fields_CRM</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']" position="attributes">  
                <attribute name="groups">iho_simplification.group_show_blocked_fields_CRM</attribute>
            </xpath>
            <xpath expr="//notebook" position="before">  
                <group name="relocated_fields_oppor" attrs="{'invisible': [('block_ui_crm', '=', False)]}">
                    <field name="campaign_id" />
                    <field name="medium_id" />
                    <field name="source_id" />
                </group>            
            </xpath>
        </field>
    </record>

