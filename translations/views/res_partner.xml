<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_block_ui_inherit_base_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.block.ui.inherit.base.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">  
               <field name="block_ui_crm" invisible="0"/>
            </xpath>
            <xpath expr="//page[2]" position="attributes">  
                <attribute name="groups">translations.group_show_blocked_fields_CRM</attribute>
            </xpath>
            <xpath expr="//group[@name='purchase']" position="attributes">
                <attribute name="groups">translations.group_show_blocked_fields_CRM</attribute>
            </xpath>
            <xpath expr="//group[@name='container_row_2']/group[3]" position="attributes">
                <attribute name="groups">translations.group_show_blocked_fields_CRM</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_res_partner_block_ui_inherit_account_view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.block.ui.inherit.account.view.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']" position="attributes">  
                <attribute name="groups">translations.group_show_blocked_fields_CRM</attribute>
            </xpath>
            <xpath expr="//group[@name='fiscal_information']" position="attributes">  
                <attribute name="groups">translations.group_show_blocked_fields_CRM</attribute>
            </xpath>
        </field>
    </record>

</odoo>
